<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/signup"
        android:name="com.sigmai.stylemento.feature.signup.SignUpFragment"
        android:label="signup"
        tools:layout="@layout/fragment_sign_up" />

    <fragment
        android:id="@+id/home"
        android:name="com.sigmai.stylemento.feature.home.HomeFragment"
        android:label="home"
        tools:layout="@layout/fragment_home" />

    <!--
    이 fragment 는 navigation 으로 관리되지 않지만,
    구조를 시각적으로 확인하기 위해 넣음.
     -->
    <fragment
        android:id="@+id/main"
        android:name="com.sigmai.stylemento.feature.main.MainFragment"
        android:label="main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_home"
            app:destination="@id/home" />
        <action
            android:id="@+id/action_main_to_signup"
            app:destination="@id/signup" />
    </fragment>
</navigation>