<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.sigmai.stylemento.feature.mypage.MyPageViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/my_page_back_img"
                android:layout_width="31dp"
                android:layout_height="57dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/my_page_menu_img"
                android:layout_width="38dp"
                android:layout_height="23.29dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_back_img"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/user_profile_img"
                    android:layout_width="162dp"
                    android:layout_height="162dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:id="@+id/user_profile_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="29dp"
                    android:layout_marginStart="47dp"
                    app:layout_constraintStart_toEndOf="@id/user_profile_img"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/user_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User_Name"
                        android:textSize="35sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:textSize="24sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/user_revise_img"
                    android:layout_width="52dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginStart="186dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/user_profile_text_layout"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/user_introduction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/user_profile_layout"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/user_interested_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심있는 코디네이터"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/user_introduction_text"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user_interested_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                app:layout_constraintTop_toBottomOf="@id/user_interested_text"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/user_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#CECECE"
                app:layout_constraintTop_toBottomOf="@id/user_interested_recycler"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/user_option_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user_line"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/buttion_shadow"
                    android:text="옷장"
                    android:textSize="35sp"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="CECECE"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="룩북"
                    android:textSize="35sp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_closet_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user_option_layout"
                app:layout_constraintStart_toStartOf="parent">
                <LinearLayout
                    android:id="@+id/user_closet_content_option_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/user_closet_all_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체"
                        android:textSize="28sp"/>
                    <TextView
                        android:id="@+id/user_closet_top_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의"
                        android:textSize="28sp"/>
                    <TextView
                        android:id="@+id/user_closet_pants_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의"
                        android:textSize="28sp"/>
                    <TextView
                        android:id="@+id/user_closet_shoes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신발"
                        android:textSize="28sp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/user_closet_add_img"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_option_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/user_closet_content_option_layout"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>