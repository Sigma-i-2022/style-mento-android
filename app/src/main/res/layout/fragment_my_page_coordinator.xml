<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sigmai.stylemento.ui.mypage.coordinator.viewModel.MyPageCoordinatorViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_page_coordinator_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:descendantFocusability="blocksDescendants">

                <ImageView
                    android:id="@+id/my_page_coordinator_revision_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:background="@drawable/ic_pencil"
                    android:onClick="@{()->viewModel.onRevisionClick()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/my_page_coordinator_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_revision_img">

                    <ImageView
                        android:id="@+id/my_page_coordinator_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/gray_d"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/my_page_coordinator_text_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="14dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/my_page_coordinator_img"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/my_page_coordinator_name_text"
                            style="@style/header3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="coordinator_name"
                            android:text="@{viewModel.coordinator.nickname}"/>

                        <TextView
                            android:id="@+id/my_page_coordinator_email_text"
                            style="@style/body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/gray_8"
                            tools:text="coordinator_email"
                            android:text="@{viewModel.coordinator.email}"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/my_page_coordinator_tag_recycler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/my_page_coordinator_introduction_text"
                    style="@style/body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:text="@{viewModel.coordinator.introduction}"
                    android:onClick="@{()->viewModel.onInstructionClick()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_profile_layout" />

                <View
                    android:id="@+id/my_page_coordinator_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:layout_marginTop="22dp"
                    android:background="#CECECE"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_introduction_text" />

                <LinearLayout
                    android:id="@+id/my_page_coordinator_option_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_line">

                    <TextView
                        android:id="@+id/my_page_coordinator_work_button"
                        style="@style/header4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_shadow"
                        android:paddingBottom="15dp"
                        android:text="작품"
                        android:textAlignment="center"
                        android:onClick="@{()->viewModel.onWorkClick()}" />

                    <TextView
                        android:id="@+id/my_page_coordinator_reviews_button"
                        style="@style/header4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_null"
                        android:paddingBottom="15dp"
                        android:text="리뷰"
                        android:textAlignment="center"
                        android:textColor="@color/gray_d"
                        android:onClick="@{()->viewModel.onReviewClick()}"/>
                </LinearLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/my_page_coordinator_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_option_layout" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_coordinator_reply_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primary">


            <EditText
                android:id="@+id/my_page_coordinator_reply_textEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="6dp"
                android:background="@color/white"
                android:hint="메시지를 입력하세요"
                android:maxLength="500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/my_page_coordinator_reply_send_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/my_page_coordinator_reply_send_text"
                style="@style/header5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:text="전송"
                android:textColor="@color/primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>