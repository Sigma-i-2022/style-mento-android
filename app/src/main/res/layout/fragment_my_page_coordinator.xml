<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sigmai.stylemento.feature.mypage.MyPageViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:descendantFocusability="blocksDescendants">

                <ImageView
                    android:id="@+id/my_page_coordiantor_back_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:background="@drawable/ic_arrow_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/my_page_coordiantor_revision_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:background="@drawable/ic_pencil"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/my_page_coordinator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordiantor_back_img">

                    <ImageView
                        android:id="@+id/my_page_coordinator_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/gray_d"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/my_page_coordinator_text_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="14dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/my_page_coordinator_img"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/my_page_coordinator_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            style="@style/header3"
                            tools:text="coordinator_name" />

                        <TextView
                            android:id="@+id/my_page_coordinator_email_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/gray_8"
                            style="@style/body1"
                            tools:text="coordinator_email" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/my_page_coordinator_tag_recycler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/my_page_coordinator_interested_button"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_circle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/my_page_coordinator_introduction_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:textStyle="bold"
                    style="@style/body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_layout" />

                <View
                    android:id="@+id/my_page_coordinator_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="22dp"
                    android:background="#CECECE"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_introduction_text" />

                <LinearLayout
                    android:id="@+id/my_page_coordinator_option_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/my_page_coordinator_line">

                    <TextView
                        android:id="@+id/my_page_coordinator_work_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_shadow"
                        android:text="작품"
                        android:textAlignment="center"
                        style="@style/header4"
                        android:paddingBottom="15dp" />

                    <TextView
                        android:id="@+id/my_page_coordinator_reviews_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_null"
                        android:text="리뷰"
                        android:textColor="@color/gray_d"
                        android:textAlignment="center"
                        style="@style/header4"
                        android:paddingBottom="15dp" />
                </LinearLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/my_page_coordinator_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_option_layout" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="채팅하기"
                style="@style/header4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingVertical="12dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="예약하기"
                style="@style/header4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingVertical="12dp"/>
        </LinearLayout>
    </RelativeLayout>

</layout>