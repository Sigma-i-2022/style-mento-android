<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="coordinator"
            type="com.sigmai.stylemento.data.model.RecommendedCoordinator" />

        <variable
            name="viewModel"
            type="com.sigmai.stylemento.feature.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/recommend_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/recommended_coordinator_photo"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/button_background_type_2"
                android:backgroundTint="@color/gray_f"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recommended_coordinator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/recommend_card_view"
            app:layout_constraintTop_toTopOf="@id/recommend_card_view"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            tools:text="jenny_eqet"
            android:text="@{coordinator.name}"
            android:textColor="@color/black"
            android:textSize="13sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/recommend_card_view"
            app:layout_constraintTop_toBottomOf="@id/recommended_coordinator_name"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            app:tags="@{coordinator.tag}"/>

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="@id/recommended_coordinator_name"
            app:layout_constraintBottom_toBottomOf="@id/recommended_coordinator_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_outlined_star"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
