<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ScrollView
            android:id="@+id/my_page_closet_add_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/my_page_closet_add_back_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/gray_d"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이템 추가"
                    android:textStyle="bold"
                    style="@style/header3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/my_page_closet_add_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"
                    android:textStyle="bold"
                    style="@style/header3"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <View
                    android:id="@+id/my_page_closet_add_header_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_f"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_closet_add_back_img"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/my_page_closet_add_item_img"
                    android:layout_width="228dp"
                    android:layout_height="262dp"
                    android:layout_marginTop="37dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background ="@color/gray_d"
                    app:layout_constraintTop_toBottomOf="@id/my_page_closet_add_header_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <LinearLayout
                    android:id="@+id/my_page_closet_add_category_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_closet_add_item_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분류"
                        style="@style/header4"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="60dp"
                        android:background="@color/trans_parent" />
                    <TextView
                        android:id="@+id/my_page_closet_add_category_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="선택"
                        style="@style/header4"/>
                    <ImageView
                        android:id="@+id/my_page_closet_add_category_button"
                        android:background="@color/gray_d"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_page_closet_add_brand_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_closet_add_category_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="브랜드"
                        style="@style/header4"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent" />
                    <EditText
                        android:id="@+id/my_page_closet_add_brand_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent"
                        android:hint="입력"
                        style="@style/header4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_page_closet_add_item_name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_closet_add_brand_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품명"
                        style="@style/header4"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent" />
                    <EditText
                        android:id="@+id/my_page_closet_add_item_name_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent"
                        android:hint="입력"
                        style="@style/header4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_page_closet_add_texture_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_closet_add_item_name_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="재질"
                        style="@style/header4"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="60dp"
                        android:background="@color/trans_parent" />
                    <TextView
                        android:id="@+id/my_page_closet_add_texture_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/header4"/>
                    <ImageView
                        android:id="@+id/my_page_closet_add_texture_button"
                        android:background="@color/gray_d"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_page_closet_add_size_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_closet_add_texture_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사이즈"
                        style="@style/header4"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent" />
                    <EditText
                        android:id="@+id/my_page_closet_add_size_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent"
                        android:hint="입력"
                        style="@style/header4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_page_closet_add_fit_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_closet_add_size_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 핏"
                        style="@style/header4"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="36dp"
                        android:background="@color/trans_parent" />
                    <TextView
                        android:id="@+id/my_page_closet_add_fit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/header4"/>
                    <ImageView
                        android:id="@+id/my_page_closet_add_fit_button"
                        android:background="@color/gray_d"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </RelativeLayout>
</layout>