<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewModel"
            type="com.sigmai.stylemento.ui.mypage.coordinator.viewModel.MyPageWorkItemViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/my_page_work_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/my_page_work_back_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_arrow_back"
            android:onClick="@{()->viewModel.onBackClick()}"/>

        <TextView
            style="@style/header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="작품"
            android:textStyle="bold" />

        <View
            android:id="@+id/my_page_work_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/my_page_work_back_img"
            android:layout_marginTop="24dp"
            android:background="@color/gray_f" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_page_work_line">

            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="@dimen/horizontal_margin">
                <TextView
                    android:id="@+id/my_page_work_item_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000.00.00"
                    style="@style/body1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/my_page_work_item_revision"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_pencil"
                    android:onClick="@{()->viewModel.onRevisionClick()}"
                    app:layout_constraintEnd_toStartOf="@id/my_page_work_item_delete"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/my_page_work_item_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/gray_d"
                    android:onClick="@{()->viewModel.onDeleteClick()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/my_page_work_item_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_d"
                    android:src="@drawable/ic_launcher_foreground"
                    app:layout_constraintDimensionRatio="5:6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_work_item_revision" />

                <TextView
                    android:id="@+id/my_page_work_item_detail"
                    style="@style/body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:onClick="@{()->viewModel.onIntroductionClick()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_work_item_img" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_page_work_item_tag_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_work_item_detail" />

                <TextView
                    android:id="@+id/my_page_work_item_coordi_info_text"
                    style="@style/header4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="코디 정보"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_work_item_tag_recycler" />

                <LinearLayout
                    android:id="@+id/my_page_work_item_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_work_item_coordi_info_text">

                    <TextView
                        style="@style/header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent"
                        android:text="상의" />

                    <TextView
                        android:id="@+id/my_page_work_item_top_text"
                        style="@style/header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_page_work_item_pants_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_work_item_top_layout">

                    <TextView
                        style="@style/header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent"
                        android:text="하의" />

                    <TextView
                        android:id="@+id/my_page_work_item_pants_text"
                        style="@style/header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_page_work_item_shoes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_work_item_pants_layout">

                    <TextView
                        style="@style/header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent"
                        android:text="신발" />

                    <TextView
                        android:id="@+id/my_page_work_item_shoes_text"
                        style="@style/header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </RelativeLayout>
</layout>