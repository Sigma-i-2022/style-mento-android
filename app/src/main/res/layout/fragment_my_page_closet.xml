<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/user_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shadow"
                android:text="옷장"
                android:textAlignment="center"
                android:textSize="18sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CECECE" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="룩북"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_closet_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_option_layout">

            <LinearLayout
                android:id="@+id/user_closet_content_option_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/user_closet_all_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user_closet_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상의"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user_closet_pants_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하의"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user_closet_shoes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신발"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/user_closet_add_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user_closet_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_closet_content_option_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>