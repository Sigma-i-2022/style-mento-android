<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/my_page_user_closet_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:id="@+id/my_page_user_closet_content_option_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_page_user_closet_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="전체"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_page_user_closet_top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="상의"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_page_user_closet_pants_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="하의"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_page_user_closet_shoes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신발"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/my_page_user_closet_add_img"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@color/gray_d"
            android:layout_alignParentEnd="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_page_user_closet_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_below="@id/my_page_user_closet_content_option_layout" />
    </RelativeLayout>
</layout>