<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_lookbook_item_revision"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/gray_d"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user_lookbook_item_delete" />

    <ImageView
        android:id="@+id/user_lookbook_item_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/gray_d"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/user_lookbook_item_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="5:6"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@color/gray_d"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/user_lookbook_item_revision"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_lookbook_item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/body1"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/user_lookbook_item_img"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_lookbook_item_tag_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/user_lookbook_item_detail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_lookbook_item_coordi_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코디 정보"
        android:textColor="@color/primary"
        style="@style/header4"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/user_lookbook_item_tag_recycler"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/my_page_lookbook_item_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/user_lookbook_item_coordi_info_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상의"
            style="@style/header4"
            android:layout_marginEnd="42dp"
            android:background="@color/trans_parent" />
        <TextView
            android:id="@+id/my_page_lookbook_item_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans_parent"
            style="@style/header4"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_page_lookbook_item_pants_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_item_top_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하의"
            style="@style/header4"
            android:layout_marginEnd="42dp"
            android:background="@color/trans_parent" />
        <TextView
            android:id="@+id/my_page_lookbook_item_pants_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans_parent"
            style="@style/header4"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_page_lookbook_item_shoes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_item_pants_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신발"
            style="@style/header4"
            android:layout_marginEnd="42dp"
            android:background="@color/trans_parent" />
        <TextView
            android:id="@+id/my_page_lookbook_item_shoes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans_parent"
            style="@style/header4"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>