<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.sigmai.stylemento.data.model.ReviewItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/review_item_owner_img"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/gray_d"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/review_item_owner_img">

            <TextView
                android:id="@+id/review_item_owner_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.owner}"
                style="@style/body1"
                android:paddingVertical="2dp"
                android:paddingHorizontal="6dp" />
            <RatingBar
                android:id="@+id/review_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="@color/primary"
                style="@style/Widget.AppCompat.RatingBar.Small" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/review_item_height_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000.0cm"
                    android:textColor="@color/gray_d"
                    style="@style/body2"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:id="@+id/review_item_weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.0kg"
                    android:textColor="@color/gray_d"
                    style="@style/body2"/>
            </LinearLayout>
            <TextView
                android:id="@+id/review_item_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000.00.00"
                android:textColor="@color/gray_d"
                style="@style/body2"/>
        </LinearLayout>
        <TextView
            android:id="@+id/review_item_content_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/trans_parent"
            android:text="@{item.content}"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/review_item_owner_img"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
