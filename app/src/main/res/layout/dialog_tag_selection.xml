<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangle_background_type_1">

        <TextView
            android:id="@+id/tag_selection_style_text"
            style="@style/header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:text="스타일"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tag_selection_style_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_style_text"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="5"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/tag_selection_situation_text"
            style="@style/header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="12dp"
            android:text="상황"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_style_tags" />

        <LinearLayout
            android:id="@+id/tag_selection_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_situation_text">

            <TextView
                android:id="@+id/tag_selection_student_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#학생"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_office_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#직장인"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_date_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#데이트"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_blindDate_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#소개팅"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_tour_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#여행"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tag_selection_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_layout_3">

            <TextView
                android:id="@+id/tag_selection_party_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#파티"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_couple_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#커플"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_guest_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#하객"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tag_selection_weather_text"
            style="@style/header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="12dp"
            android:text="계절/날씨"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_layout_4" />

        <LinearLayout
            android:id="@+id/tag_selection_layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_weather_text">

            <TextView
                android:id="@+id/tag_selection_spring_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#봄"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_summer_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#여름"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_autumn_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#가을"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_winter_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#겨울"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_selection_rain_text"
                style="@style/body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_round"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="#비"
                android:textColor="@color/gray_8"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/tag_selection_save_button"
            style="@style/header4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="30dp"
            android:paddingVertical="10dp"
            android:text="완료"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_layout_5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
