<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangle_background_type_1">

        <TextView
            android:id="@+id/tag_selection_style_text"
            style="@style/header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:text="스타일"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tag_selection_style_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_style_text"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="5"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/tag_selection_situation_text"
            style="@style/header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="12dp"
            android:text="상황"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_style_tags" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tag_selection_situation_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_situation_text"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="5"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/tag_selection_weather_text"
            style="@style/header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="12dp"
            android:text="계절/날씨"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_situation_tags" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tag_selection_weather_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_weather_text"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="5"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/tag_selection_save_button"
            style="@style/header4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="30dp"
            android:paddingVertical="10dp"
            android:text="완료"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tag_selection_weather_tags" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
