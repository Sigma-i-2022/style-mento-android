<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewModel"
            type="com.sigmai.stylemento.ui.mypage.user.viewModel.MyPageLookbookAddViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ScrollView
            android:id="@+id/my_page_lookbook_add_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/my_page_lookbook_add_back_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_arrow_back"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:onClick="@{()->viewModel.onBackClick()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이템 추가"
                    android:textStyle="bold"
                    style="@style/header3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/my_page_lookbook_add_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"
                    android:textStyle="bold"
                    style="@style/header3"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:onClick="@{()->viewModel.onSaveClick()}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <View
                    android:id="@+id/my_page_lookbook_add_header_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_f"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_back_img"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/my_page_lookbook_add_item_img"
                    android:layout_width="228dp"
                    android:layout_height="262dp"
                    android:layout_marginTop="37dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background ="@color/gray_d"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_header_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <EditText
                    android:id="@+id/my_page_lookbook_add_detail_editText"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_item_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@null"
                    android:hint="설명 입력..."
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:maxLength="300"
                    android:textColor="@color/gray_6"
                    style="@style/body1"/>

                <TextView
                    android:id="@+id/my_page_lookbook_add_tag_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스타일 태그"
                    style="@style/header4"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="60dp"
                    android:background="@color/trans_parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_detail_editText"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/my_page_lookbook_add_tag_add_img"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_plus"
                    android:layout_marginHorizontal="10dp"
                    android:onClick="@{()->viewModel.onTagAddClick()}"
                    app:layout_constraintTop_toTopOf="@+id/my_page_lookbook_add_tag_title_text"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_page_lookbook_add_tag_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_tag_title_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:orientation="vertical"
                    app:spanCount="5"/>

                <View
                    android:id="@+id/my_page_lookbook_add_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_tag_recycler"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:background="@color/gray_f"/>

                <TextView
                    android:id="@+id/my_page_lookbook_add_coordi_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코디 정보"
                    style="@style/header4"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="60dp"
                    android:background="@color/trans_parent"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_divider"
                    app:layout_constraintStart_toStartOf="parent"/>
                <LinearLayout
                    android:id="@+id/my_page_lookbook_add_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_coordi_info_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의"
                        style="@style/header4"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent" />
                    <EditText
                        android:id="@+id/my_page_lookbook_add_top_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent"
                        android:hint="입력"
                        android:maxLength="30"
                        style="@style/header4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_page_lookbook_add_pants_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_top_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의"
                        style="@style/header4"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent" />
                    <EditText
                        android:id="@+id/my_page_lookbook_add_pants_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent"
                        android:hint="입력"
                        android:maxLength="30"
                        style="@style/header4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_page_lookbook_add_shoes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintTop_toBottomOf="@id/my_page_lookbook_add_pants_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신발"
                        style="@style/header4"
                        android:layout_marginEnd="42dp"
                        android:background="@color/trans_parent" />
                    <EditText
                        android:id="@+id/my_page_lookbook_add_shoes_editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans_parent"
                        android:hint="입력"
                        android:maxLength="30"
                        style="@style/header4"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </RelativeLayout>
</layout>