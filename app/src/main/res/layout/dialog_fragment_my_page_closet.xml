<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/dialog_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_closet_dialog_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_header_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:id="@+id/my_page_closet_dialog_revision_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textSize="14dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/my_page_closet_dialog_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 옷장"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/my_page_closet_dialog_revision_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/my_page_closet_dialog_close_text"/>
            <TextView
                android:id="@+id/my_page_closet_dialog_close_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닫기"
                android:textSize="14dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/my_page_closet_dialog_item_img"
            android:layout_width="215dp"
            android:layout_height="242dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_closet_dialog_header_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/my_page_closet_dialog_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_closet_dialog_item_img"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분류"
                style="@style/header4"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:id="@+id/my_page_closet_dialog_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/header4"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_page_closet_dialog_brand_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_closet_dialog_category_layout"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브랜드"
                style="@style/header4"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:id="@+id/my_page_closet_dialog_brand_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/header4"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_page_closet_dialog_itemName_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_closet_dialog_brand_layout"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품명"
                style="@style/header4"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:id="@+id/my_page_closet_dialog_itemName_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/header4"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_page_closet_dialog_texture_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_closet_dialog_itemName_layout"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재질"
                style="@style/header4"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:id="@+id/my_page_closet_dialog_texture_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/header4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_page_closet_dialog_size_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_closet_dialog_texture_layout"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이즈"
                style="@style/header4"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:id="@+id/my_page_closet_dialog_size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/header4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_page_closet_dialog_fit_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_closet_dialog_size_layout"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 핏"
                style="@style/header4"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:id="@+id/my_page_closet_dialog_fit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/header4"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>