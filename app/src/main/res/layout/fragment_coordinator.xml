<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.sigmai.stylemento.feature.coordinator.CoordinatorViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/coordinator_toolbar"
                layout="@layout/toolbar"
                app:title='@{"코디네이터"}'
                app:disableBackButton="@{true}"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coordinator_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/coordinator_toolbar"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                app:coordinators="@{viewModel.dummyList}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

