<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewModel"
            type="com.sigmai.stylemento.feature.mypage.coordinator.viewModel.MyPageCoordinatorRevisionViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ScrollView
            android:id="@+id/my_page_coordinator_revision_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_above="@id/my_page_coordinator_revision_save_button">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/my_page_coordinator_revision_back_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_arrow_back"
                    android:onClick="@{()->viewModel.onBackClick()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/my_page_coordinator_revision_profile_img"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="42dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/gray_d"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/my_page_coordinator_revision_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.coordinator.nickname}"
                    style="@style/header3"
                    android:textStyle="bold"
                    android:background="@color/trans_parent"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_revision_profile_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/my_page_coordinator_revision_introduction_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자기소개"
                    style="@style/header4"
                    android:textStyle="bold"
                    android:layout_marginTop="29dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_revision_name_text"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/my_page_coordinator_revision_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#CECECE"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_revision_introduction_title_text"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/my_page_coordinator_revision_introduction_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:maxLength="300"
                    android:textColor="@color/gray_6"
                    style="@style/body1"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_revision_line"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/my_page_coordinator_revision_styleTag_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스타일 태그 (최대 3개)"
                    style="@style/header4"
                    android:textStyle="bold"
                    android:layout_marginTop="29dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_revision_introduction_editText"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/my_page_coordinator_revision_styleTag_add"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_plus"
                    android:layout_marginTop="29dp"
                    android:layout_marginHorizontal="10dp"
                    android:onClick="@{()->viewModel.onTagAdditionClick()}"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_revision_introduction_editText"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_page_coordinator_revision_styleTag_recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/my_page_coordinator_revision_styleTag_title_text"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
        <Button
            android:id="@+id/my_page_coordinator_revision_save_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:text="저장"
            android:textColor="@color/white"
            style="@style/header4"
            android:onClick="@{()->viewModel.onSaveClick()}"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</layout>