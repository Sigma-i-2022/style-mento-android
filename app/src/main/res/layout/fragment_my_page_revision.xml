<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/my_page_revision_back_img"
                android:layout_width="16dp"
                android:layout_height="29dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/my_page_revision_profile_img"
                android:layout_width="118dp"
                android:layout_height="128dp"
                android:layout_marginTop="42dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_page_revision_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_name"
                android:textSize="18dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_profile_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/my_page_revision_introduction_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기소개 (30자 미만)"
                android:textSize="18dp"
                android:layout_margin="29dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_name_text"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/my_page_revision_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:background="#CECECE"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_introduction_title_text"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/my_page_revision_introduction_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_line"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/my_page_revision_interested_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심있는 코디네이터"
                android:textSize="18dp"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_introduction_editText"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/my_page_revision_interested_add"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_introduction_editText"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_page_revision_interested_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_interested_title_text"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/my_page_revision_styleTag_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심있는 코디네이터"
                android:textSize="18dp"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_interested_recyclerView"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_page_revision_styleTag_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_styleTag_title_text"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/my_page_revision_styleTag_add"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_styleTag_title_text"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/my_page_revision_save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="저장"
                app:layout_constraintTop_toBottomOf="@id/my_page_revision_styleTag_recyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>