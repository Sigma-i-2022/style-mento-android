<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="com.sigmai.stylemento.ui.mypage.user.viewModel.MyPageRevisionViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ScrollView
            android:id="@+id/revision_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_above="@id/save">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_arrow_back"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:onClick="@{(view)->viewModel.onBack(view)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="42dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/gray_d"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:imageUrlCircle="@{viewModel.user.profileImgUrl}"/>

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.user.userId}"
                    tools:text="user_name"
                    style="@style/header3"
                    android:textStyle="bold"
                    android:background="@color/trans_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_photo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/self_introduction_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자기소개"
                    style="@style/header4"
                    android:textStyle="bold"
                    android:layout_marginTop="29dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    app:layout_constraintTop_toBottomOf="@id/user_id"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/introduction_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#CECECE"
                    app:layout_constraintTop_toBottomOf="@id/self_introduction_textview"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:textColor="@color/gray_6"
                    style="@style/body1"
                    app:layout_constraintTop_toBottomOf="@id/introduction_line"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@={viewModel.introduction}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <Button
            android:id="@+id/save"
            style="@style/header4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginBottom="20dp"
            android:onClick="@{(view)->viewModel.onSave(view)}"
            android:text="저장"
            android:textColor="@color/white" />
    </RelativeLayout>
</layout>